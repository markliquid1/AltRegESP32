function syncToggleToHidden(name) {
  const checkbox = document.getElementById(name + "_checkbox");
  const hidden = document.getElementById(name);
  if (checkbox && hidden) {
    hidden.value = checkbox.checked ? "1" : "0";
    hidden.form.submit();
  }
}
</script>
